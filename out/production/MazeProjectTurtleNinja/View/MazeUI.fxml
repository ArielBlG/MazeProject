<?xml version="1.0" encoding="UTF-8"?>

<?import View.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="mainPane" onKeyPressed="#keyPressed" styleClass="all-window" stylesheets="@./MazeUISidesStyles.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="View.MazeDisplayController">
    <left>
        <VBox prefWidth="${(mainPane.width)/10}" styleClass="left-panel" stylesheets="@./MazeUISidesStyles.css">
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <children>
                        <Label styleClass="location_lbl" text="Player Row" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Label text="Player Col" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                    </children>
                </GridPane>
            </children>
        </VBox>
    </left>
    <right>
        <VBox>
            <children>
                <GridPane>
                    <columnConstraints>
                        <ColumnConstraints prefWidth="${(mainPane.width)/20}" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints />
                        <RowConstraints />
                    </rowConstraints>
                    <children>

                    </children>
                </GridPane>
            </children>
        </VBox>
    </right>
    <top>
        <HBox>
            <children>
                <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="${(mainPane.height)/8}" />
                    </rowConstraints>
                    <children>
                    </children>
                </GridPane>
            </children>
        </HBox>
    </top>
    <bottom>
        <HBox>
            <children>
                <GridPane BorderPane.alignment="CENTER">
                    <columnConstraints>
                        <ColumnConstraints />
                        <ColumnConstraints />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints prefHeight="${(mainPane.height)/8}" />
                    </rowConstraints>
                    <children>
                        <Button onAction="#changeViews" text="Main Menu" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                        <Button onAction="#showSolution" text="Hint" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                    </children>
                </GridPane>
            </children>
        </HBox>
    </bottom>
    <center>
        <Pane fx:id="pane" styleClass="Pane" stylesheets="@./style.css" BorderPane.alignment="CENTER">
            <children>
            <ScrollPane fx:id="scrollpane" maxWidth="${pane.width}" maxHeight="${pane.height}" stylesheets="@MazeUISidesStyles.css">
               <content>
                      <MazeDisplay fx:id="mazeDisplay" height="${scrollpane.height}" onScroll="#Zoom" targetImg="./src/Resources/Images/Target/Pizza.png" startImg="./src/Resources/Images/Start/sewer.png" wallImagesFolder="./src/Resources/Images/Walls" width="${scrollpane.width}" />
               </content>
            </ScrollPane>
            </children>
        </Pane>
    </center>
</BorderPane>
